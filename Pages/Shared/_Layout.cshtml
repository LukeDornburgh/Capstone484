@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Home";
}
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lab1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet' />
    <link rel="stylesheet" href="~/Lab1.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link href="~/css/style.css" rel="stylesheet" />

    <!-- Bootstrap v5.1.3 -->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

    <style>

        img .logo {
            max-width: 250px;
            height: 100%;
        }

        nav {
            background-color: #31184C;
            display: flex;
            justify-content: space-around;
            align-items: center;
            height: 80px;
            color: white;
        }

        img {
            width: 100%;
            height: auto;
            /*padding: 10px;
                    float: left;*/
        }

        .buttons4 {
            float: right;
        }

        .login {
            background: #9582aa;
            color: #f8f9fa;
            display: flex;
            border-radius: 8px;
            padding-left: 10px;
            padding-right: 10px;
            padding-top: 5px;
            padding-bottom: 5px;
            border: 5px;
        }

        .signup {
            background: #9582aa;
            color: #f8f9fa;
            display: flex;
            border-radius: 8px;
            padding-left: 10px;
            padding-right: 10px;
            padding-top: 5px;
            padding-bottom: 5px;
            border: 5px;
        }

        .divider {
            color: #9582AA;
        }

        .navbtn {
            background: #9582AA;
            border-radius: 8px;
            border: 5px;
            padding: 5px;
            color: white;
        }

        .login, .signup {
            display: inline-block;
        }

        .nav2 {
            display: inline-block;
        }

        .nav3 {
            display: inline-block;
        }

        .color {
            text-decoration: underline;
            color: white;
            --bs-link-hover-color: #9582aa;
        }

        .signup {
            background: #9582aa;
        }

            .signup:hover {
                text-decoration: none;
                color: inherit;
            }

        #feedback {
            width: 40px; /* width of button */
            height: 40px; /* height of button */
            line-height: 30px;
            overflow: hidden;
            z-index: 999;
            cursor: pointer;
            /*transform: rotate(270deg); /* turns right arrow 270 degrees */
            position: fixed; /* fixed at bottom corner */
            bottom: 30px; /* distance from bottom */
            right: 40px; /* distance from right */
            padding: 4px 4px 13px 4px; /* padding around arrow */
            border-radius: 5px;
            background: #9582AA; /* background with transparency */
            color: #eee; /* color of arrow */
            text-align: center;
            font-size: 20px; /* size of the arrow */
            text-decoration: none;
        }

            #feedback:link {
                background: #9582AA;
                color: #eee;
            }

            #feedback:hover {
                background: #D8EC91;
                color: #ccc;
            }

            #feedback:active {
                background: #D8EC91;
                color: #eee;
            }

        footer {
            /*padding-top: 50px;*/
            background-color: #31184C;
            text-align: center;
            /* padding-bottom: 50px;*/
            font-size: small;
            color: white;
        }

    </style>
</head>

<body>

    <header>

        @{
            if (Context.Session.GetString("username") != null)
            {
                <nav>
                    <div>
                        <a asp-area="" asp-page="/Index">
                            <img src="~/images/MCHwordmark.png" class="logo">
                        </a>
                    </div>

                    <div>
                        <a id="peopleTab" class="color" asp-area="" asp-page="/UsersPages/AllProfiles">People</a>
                    </div>
                    <div>
                        <a id="projectsTab" class="color" asp-area="" asp-page="/ProjectsPages/Index">Projects</a>
                    </div>
                    <div class="divider">|</div>
                    <div>
                        <a  asp-page="/UsersPages/Calendar">
                        <svg id="calendarIcon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#9582AA" class="bi bi-calendar-event" viewBox="0 0 16 16">
                            <path d="M11 6.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1z" />
                            <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
                        </svg>
                        </a>
                    </div>
                    <div>
                        <a asp-page="/UsersPages/Messages">
                            <svg id="messageIcon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#9582AA" class="bi bi-chat" viewBox="0 0 16 16">
                                <path d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z" />
                            </svg>
                        </a>
                    </div>
                    <div>
                        <a asp-page="/ProjectsPages/RequestNotifications">
                            <svg id="requestIcon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#9582AA" class="bi bi-bell" viewBox="0 0 16 16">
                                <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zM8 1.918l-.797.161A4.002 4.002 0 0 0 4 6c0 .628-.134 2.197-.459 3.742-.16.767-.376 1.566-.663 2.258h10.244c-.287-.692-.502-1.49-.663-2.258C12.134 8.197 12 6.628 12 6a4.002 4.002 0 0 0-3.203-3.92L8 1.917zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 1 1 1.99 0A5.002 5.002 0 0 1 13 6c0 .88.32 4.2 1.22 6z" />
                            </svg>
                            @*@{
                    if (Context.Session.GetInt32("badgeNum") != 0)
                    {
                    <span style="border-radius: 80%" class="badge">@Context.Session.GetInt32("badgeNum")</span>
                    }
                    *@
                        </a>
                    </div>
                    <div>
                        <a asp-area="" asp-route-email="@Context.Session.GetString("username")" asp-page="/UsersPages/EditUser">
                            <svg id="profileIcon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#9582AA" class="bi bi-person" viewBox="0 0 16 16">
                                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                            </svg>
                        </a>
                    </div>



                    <div class="nav2">
                        @{
                            if (Context.Session.GetString("username") != null)
                            {

                                @Context.Session.GetString("username")

                            }
                        }


                    </div>
                    <div class="nav3">
                        <a class="color" type="button" asp-area="" asp-page="/BasicLogin" asp-route-logout="true">Log Out</a>
                    </div>

                    <button class="hamburger">
                        <span class="material-icons">menu</span>
                    </button>
                </nav>

            }
            else
            {
                <nav class="navbar navbar-expand-lg">
                    <div class="container-fluid">

                        <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="~/images/MCHwordmark.png" class="logo"></a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0"></ul>
                            <div class="buttons4">
                                <a type="button" class="signup" asp-area="" asp-page="/BasicLogin">Log in</a>
                                <a type="button" class="signup" asp-page="UsersPages/CreateHashedLogin">Sign Up</a>
                            </div>
                        </div>
                    </div>
                </nav>
            }
        }

        <div class="mobile-menu">
            <a asp-area="" asp-page="/Index">Home</a>
            <a asp-area="" asp-page="/UsersPages/Index">Users</a>
            <a asp-area="" asp-page="/ProjectsPages/Index">Projects</a>
            <a asp-area="" asp-page="/TeamsPages/MyTeams">My Teams</a>
            <a asp-area="" asp-page="/TeamsMeetingsPages/Index">My Meetings</a>
            <a asp-area="" asp-page="/BasicLogin">Log in</a>
            <a asp-area="" asp-page="/ProjectsPages/RequestNotifications">Notifications</a>
            <a asp-area="" asp-page="/BasicLogin" asp-route-logout="true">Logout</a>
        </div>
    </header>

    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Button trigger modal -->

    <!-- Feedback Modal -->
    <div class="modal fade" id="staticBackdrop2" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title fs-5" id="staticBackdropLabel">Feedback</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label"><h3>Got a comment or question? Let us know!</h3></label>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <a href="mailto:madisonconnecthub@gmail.com?subject=Feedback for Madison Connect Hub">
                        <button type="button" class="btn btn-primary">Send Email</button>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- feedback button -->
    <a id="feedback" title="feedback" a ref="icon" class="icon" data-bs-toggle="modal" data-bs-target="#staticBackdrop2">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-chat-left-text-fill" viewBox="0 0 20 20">
            <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H4.414a1 1 0 0 0-.707.293L.854 15.146A.5.5 0 0 1 0 14.793V2zm3.5 1a.5.5 0 0 0 0 1h9a.5.5 0 0 0 0-1h-9zm0 2.5a.5.5 0 0 0 0 1h9a.5.5 0 0 0 0-1h-9zm0 2.5a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5z" />
        </svg>
    </a>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Lab1 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/layout.js" asp-append-version="true"></script>
    <script src="~/js/index.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>