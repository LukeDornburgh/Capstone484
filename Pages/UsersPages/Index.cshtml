@model Lab1.Pages.UsersPages.IndexModel
@{
    ViewData["Title"] = "View Users";
}
<!-- Luke Dornburgh and Andres Villalon submission for Lab1 Part 3!-->
<h2 class="h2">Users Table</h2>
<table class="table table-bordered table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>ProfessionalEmail</th>
            <th>Phone</th>
            <th>Position</th>
            <th>Edit My Profile</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var user in Model.UserList)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.ProfessionalEmail</td>
                    <td>@user.Phone</td>
                    <td>@user.Position</td>
                    <td>
                    <a asp-page="EditUser" class="btn btn-primary" asp-route-UserID="@user.UserID">Edit</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
